[
    {
        "name": "sheepit-backend",
        "image": "sheepit/sheepit:latest",
        "cpu": 0,
        "memory": 256,
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80,
                "protocol": "tcp"
            }
        ],
        "environment": [
            {
                "name": "ASPNETCORE_ENVIRONMENT",
                "value": "production"
            },
            {
                "name": "BASE_URL",
                "value": "http://<<ECS_ADDRESS>>:80/"
            },
            {
                "name": "Mongo:ConnectionString",
                "value": "mongodb://root:example@<<ECS_ADDRESS>>:27017"
            }
        ],
        "essential": true
    },
    {
        "name": "mongodb-backend",
        "image": "mongo:4.1",
        "cpu": 0,
        "memory": 256,
        "portMappings": [
            {
                "containerPort": 27017,
                "hostPort": 27017,
                "protocol": "tcp"
            }
        ],
        "environment": [
            {
                "name": "MONGO_INITDB_ROOT_USERNAME",
                "value": "root"
            },
            {
                "name": "MONGO_INITDB_ROOT_PASSWORD",
                "value": "example"
            }
        ],
        "essential": true
    }
]